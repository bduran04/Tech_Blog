<link rel="stylesheet" href="css/style.css">
<div class="card text-center">
  <div class="card-header text-center">
    <h2>{{title}}</h2>
    <h6>Created by {{user.username}} on {{format_date date_created}}</h6>
  </div>
  <div>
    <p>{{content}}</p>
  </div>
</div>

<div class="form-box">
  <form class="form">
    <div class="form-group">
      <textarea class="form-input" id="comment-content" name="comment-content" placeholder="Post a comment"></textarea>
    </div>
    <div class="form-group">
      <button type="click" class="btn btn-primary" id="commentBtn">Post</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>